import java.util.Scanner;

public class BaiTap2Buoi5 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Nhập họ tên của bạn vào đây:");
        String fullName = input.nextLine();
        System.out.println("Nhập tuổi của bạn vào đây:");
        int age = input.nextInt();
        System.out.println("Nhập giới tính của bạn vào đây:");
        input.nextLine();
        String gender = input.nextLine();
        System.out.println("Nhập mã số sinh viên của bạn vào đây:");
        String studentId = input.nextLine();
        System.out.println("Thông tin sinh viên như sau:");
        System.out.printf("%-20s%-20s%-20s%-20s\n", "Họ và tên", "Tuổi" , "Giới tính", "MSSV");
        System.out.printf("%-20s%-20d%-20s%-20s", fullName, age, gender, studentId);
    }
}
